
<div class="container">

<div class="row">

<div class= "col-md-6 col-md-offset-3">

<%= form_for @equipment, url: user_equipments_path(current_user) do |f| %>

<h2 class="text-center">List Your Gear</h2>

             <div class="row">

                <div class="form-group text-center">
                    <div class="form-group" data-toggle= "buttons">

                      <label class="btn btn-primary btn-lg outline col-md-3">
                        <%= f.radio_button :type, "Audio" %>
                        <h2 class="icon-audio"></h2>
                        Audio
                      </label>

                      <label class="btn btn-primary btn-lg outline  col-md-3">
                        <%= f.radio_button :type, "Video" %>
                        <h2 class="icon-video"></h2>

                        Video
                      </label>

                      <label class="btn btn-primary btn-lg outline col-md-3">
                        <%= f.radio_button :type, "Photo" %>

                         <h2 class="icon-photo"></h2>
                        Photo
                      </label>


                      <label class="btn btn-primary btn-lg outline col-md-3" style='margin-bottom: 20px;'>
                        <%= f.radio_button :type, "Accessories" %>
                        <h2 class="icon-other"></h2>

                        Other
                      </label>

                    </div>
                </div>
            </div>

        <div class="row">
            <div class="form-group">
              <label>Condition</label>
              <%= f.select :condition, [["Like New","Like New"], ["Very Good","Very Good"], ["Good","Good"],  ["Acceptable","Acceptable"]],prompt: "Select...", class: "form-control" %>
            </div>
          </div>
        <div class="row">
          <div class="form-group">
            <label>Listing name</label>
            <%= f.text_field :name, placeholder: "Be clear and descriptive", class: "form-control" %>
          </div>
        </div>

        <div class="row">
          <div class="form-group">
            <label>Description</label>
            <%= f.text_area :description, rows: 5, placeholder: "Tell something about your gear", class: "form-control" %>
          </div>
        </div>


        <div class="row">
          <div class="form-group">
            <label>Address</label>
            <%= f.text_field :address, id:"search_address" , placeholder: "What is your address?", class: "form-control" %>
          </div>
        </div>
        <div class="row">
            <div class="form-group">
              <label>Price per day</label>
              <div class="input-group">
                <div class="input-group-addon">€</div>
                <%= f.text_field :value, placeholder: "eg. €100", class: "form-control" %>
              </div>
            </div>
          </div>

          <div class="row">

              <label>Available From</label>
              <%= f.date_field :start_date, placeholder: 'Start Date' %>


              <label>Till</label>
              <%= f.date_field :end_date, placeholder: 'End Date' %>

          </div>

          <div class="row" style='margin-bottom: 20px;'>

              <%= f.label :picture %>
              <%= f.file_field :picture %>
          </div>

         <div class="row">
        <div class="actions">

          <%= f.submit "Save", class: "btn btn-primary btn-lg" %>

        </div>

      </div>

     </div>


</div>

 <% end %>

</div>

