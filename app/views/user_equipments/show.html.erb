<div class="container">
  <div class="row"><h1 class="text-center"></h1>
    <p class="text-center">Thanks for your listing</p>
  </div>
  <div class="row">
    <% current_user.equipment.each do |e| %>
    <% if e == current_user.equipment.last %>
      <div class="col-md-6 col-md-offset-3">
        <div class="panel panel-default coupon">
          <div class="panel-heading" id="head">
              <%= e.name %>
            </div>
              <!-- <div class="panel-body"> -->
                <%= image_tag e.picture.url(:medium), class: "coupon-img img-rounded" %>
              <div class="col-md-9">
                <ul class="disclosure">
                  <p><%= e.description %></p>
                </ul>
              </div>
              <div class="col-md-3">
                <div class="offer">
                 â‚¬
                  <%= e.value %>
                </div>
              </div>
             <!--  </div -->
              <!-- <div class="panel-footer"> -->
                <div class="">
                  <div class="btn btn-primary btn-lg">
                    <%= link_to "Add another gear", new_user_equipment_path(current_user)%>
                  </div>
                  <div class="btn btn-primary btn-lg">
                    <%= link_to user_equipments_path(current_user) do %>
                      </i>  <%= t ".profile", default: "View all my gears" %>
                    <% end %>
                  </div>
                </div>
              </div>
           </div>
          <div class="exp"></div>
        </div>
      </div>
      <% end %>
      <% end %>
    </div>
  </div>
</div>

