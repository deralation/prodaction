<div class="container">
  <div class="row"><h1 class="text-center"></h1>
    <p class="text-center">Thanks for your listing</p>
  </div>
  <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="panel panel-default coupon">
          <div class="panel-heading" id="head">
              <%= current_user.equipment.last.name %>
            </div>

              <div class="panel-body">
                <%= image_tag current_user.equipment.last.picture.url(:medium), class: "coupon-img img-rounded" %>

              <div class="col-md-9">
                <ul class="disclosure">
                  <p><%= current_user.equipment.last.description %></p>
                </ul>
              </div>
              <div class="col-md-3">
                <div class="offer">

                  <span class="glyphicon glyphicon-euro"><sup></sup></span>
                  <span class="number"><%= current_user.equipment.last.value %></span>

                </div>
              </div>
             <!--  </div -->
              <!-- <div class="panel-footer"> -->
                <div class="">
                  <div class="btn btn-primary btn-lg">
                    <%= link_to "Add another gear", new_user_equipment_path(current_user)%>
                  </div>
                  <div class="btn btn-primary btn-lg">
                    <%= link_to user_equipments_path(current_user) do %>
                      </i>  <%= t ".profile", default: "View all my gears" %>
                    <% end %>
                  </div>
                </div>
              </div>
           </div>
          <div class="exp"></div>
        </div>
      </div>
    </div>
  </div>
</div>

