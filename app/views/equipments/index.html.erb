  <br>

  <div id="article">
    <div class="row">
      <div class="col-xs-12">
        <%= form_for Equipment.new, url: equipments_path, :method => 'get' do |f| %>
        <%= text_field_tag :search, params[:search], style: "color: black" %>
        <%= submit_tag "Search", :name => nil %>
          <div class="row">
            <div class="col-md-3">
              <%= date_field :start_date, placeholder: "From", class: "form-control" %>
            </div>
            <div class="col-md-3">
              <%= date_field :end_date, placeholder: "Until", class: "form-control" %>
            </div>
          </div>
          <hr>
          <div class="row">
            <div class="col-md-4">
              <%= check_box_tag "q[equip_type_eq_any][]", "Video" %> Video
            </div>
            <div class="col-md-4">
              <%= check_box_tag "q[equip_type_eq_any][]", "Audio" %> Audio
            </div>
            <div class="col-md-4">
              <%= check_box_tag "q[equip_type_eq_any][]", "Smthgn" %> Smthng
            </div>
          </div>

          <hr>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div id="wrapper">
  <div id="sidebar">
    <div id="widget" class="sticky">
      <div id="map" style="width: 100%; height: 600px;"></div>
        <% content_for(:after_js) do %>
                  <%= javascript_tag do %>
                    $(document).on('ready', function() {
                    console.log(<%= raw @markers.to_json %>);
                      handler = Gmaps.build('Google');
                      handler.buildMap({ internal: { id: 'map' } }, function(){

                        markers = handler.addMarkers(<%= raw @markers.to_json %>);
                        handler.bounds.extendWith(markers);
                        handler.fitMapToBounds();
                      });
                    })
          <% end %>
        <% end %>
    </div>
  </div>
</div>

  <div class="row" id="list">
      <% @equipments.each do |equip| %>
        <%= image_tag equip.picture.url(:medium) %>
        <%= equip.name %>
        <%= equip.value %>
        <%= equip.description %>
        <%= equip.start_date %>
        <%= equip.end_date %>
        <%= link_to "Book"%>
      <% end %>
    </div>

<script>

  $(function(){ // document ready

    if (!!$('.sticky').offset()) { // make sure ".sticky" element exists

      var stickyTop = $('.sticky').offset().top; // returns number

      $(window).scroll(function(){ // scroll event

        var windowTop = $(window).scrollTop(); // returns number

        if (stickyTop < windowTop){
          $('.sticky').css({ position: 'fixed', top: 0 });
        }
        else {
          $('.sticky').css('position','static');
        }

      });

    }

  });

</script>



