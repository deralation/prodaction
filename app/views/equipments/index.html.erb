                        <div class="pull-right"><%= equip.user.reviews.where(equipment_id: equip.id).first.rate %> Volts</div>
                        <div>
                            <% equip.user.reviews.where(equipment_id: equip.id).first.rate.to_i.times do |bolt| %>
                              <i class="fa fa-bolt"></i>
                            <% end %>
                        </div>
                         <% else %>
