<div class="">
  <div class="col-md-12">

    <div class="panel panel-default">
      <div class="panel-heading">Your Conversations</div>
      <div class=" panel-body">
        <div class="container">
          <% @conversations.each do |conversation| %>
            <% other = conversation.sender == current_user ? coversation.recipient : conversation.sender %>
            <% link_to conversation_messages_path(conversation) do %>
              <div class="row conversation">
                <div class="col-md-2">
                  <%= image_tag avatar_url(other), class: "image-circle avatar-medium" %>
                </div>
                <div class="col-md-2">
                  <%= other.first_name %>
                  <%= conversation.messages.last.message_time %>
                </div>
                <div class="col-md-8">
                  <%= conversation.messages.last.content %>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>

    <h3></h3>


  </div>

</div>
